@using Domain.Entities
@model List<Fruit>


<div class="d-flex justify-content-between align-items-center">
    <h2>Fruit</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus"></i> Create New
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
<th>Id</th>
<th>Color</th>
<th>Name</th>
<th>Taste</th>
<th style="width: 160px;">Action</th>
</tr>

    </thead>
    <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
<td>@item.Color</td>
<td>@item.Name</td>
<td>@item.Taste</td>

                <td>
                    <div class="d-flex justify-content-between">
                        <a asp-area="lazycat" asp-controller="Fruit" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-area="lazycat" asp-controller="Fruit" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                     </div>
                </td>
            </tr>
        }
    </tbody>
</table>